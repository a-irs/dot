gtk-color-scheme = "base_color:#ffffff\nfg_color:#000000\ntooltip_fg_color:#ffffff\nselected_bg_color:#3cb0fd\nselected_fg_color:#FFFFFF\ntext_color:#000000\nbg_color:#e5e5e5\ntooltip_bg_color:#333333\nlink_color:#4f90e8"
