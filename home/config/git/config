[core]
    sshCommand = ssh -o StrictHostKeyChecking=ask

# NOT SET BY DEFAULT
#
# [user]
#     name = a-irs
#     email = a-irs@users.noreply.github.com

[color]
    ui = 1

[alias]
    subup = submodule update --remote --merge
    r = reset
    p = !git add -A && git commit && git push
    pp = !git add -A && git commit -m 'Update' && git push 2>/dev/null
    clone1 = clone --depth=1
    d = diff
    wd = diff --word-diff=color
    wdiff = diff --word-diff=color
    wlog = log --word-diff=color -p
    co = checkout
    cm = commit
    l = log -p
    s = status -sbu
    c = !git add --intent-to-add -A && git add --patch && git commit
    ca = !git add --intent-to-add -A && git add --patch && git commit --amend
    trash = !git stash push --include-untracked -m "trash-$(date +%F_%T)"
    sw = switch
    b = branch -vv

    stash-pull = pull --rebase --autostash
    sp = stash-pull
    sm = sync-master
    nb = new-branch
    back-to-master = !git checkout master && git pull && git cleanup
    btm = back-to-master
    b2m = back-to-master

[merge]
    tool = nvimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false
    keepBackup = false  # do not generate .orig files
    keepTemporaries = false

[init]
    defaultBranch = master

[push]
    # avoid "To push the current branch and set the remote as upstream, use: git push --set-upstream origin master"
    autoSetupRemote = true
