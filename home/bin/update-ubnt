#!/usr/bin/env bash

set -eu

if (($# != 1 )); then
    echo "Usage: ./$(basename "$0") <image URL>"
    exit 1
fi

url=$1

host=erx.home
ssh -t "$host" -- "vbash -ic \"show system image\""
ssh -t "$host" -- "vbash -ic \"add system image \"$url\"\""
ssh -t "$host" -- "vbash -ic \"show system image\""
ssh -t "$host" -- "vbash -ic reboot"

while ! ping -c 1 "$host"; do
    sleep 1
done
ssh -t "$host" -- "vbash -ic \"show system image\""
