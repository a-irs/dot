#!/usr/bin/env bash

set -euo pipefail

URL=$1
NS=$(echo "$URL" | rev | cut -d '/' -f 2 | rev)
REPO=$(echo "$URL" | rev | cut -d '/' -f 1 | rev | sed -E 's/\.git$//')

dest=$TMPDIR/git-peek/$NS/$REPO

if [[ "$URL" == clean ]]; then
    rm -rf "$TMPDIR/git-peek"
    echo "removed '$TMPDIR/git-peek'."
    exit
fi

clear
echo ":: $URL"
if [[ ! -d "$dest/.git" ]]; then
    echo ""
    git clone "$URL" "$dest"
fi
cd "$dest"
echo ""
ls -F
zsh
