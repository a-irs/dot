#!/usr/bin/env bash

set -uo pipefail

type=${1:-default}

case $type in
    all) rex=(rg -o '\S{5,}') ;;  # anything with len>5
    default) rex=(rg -o '[a-zA-Z0-9-_\.\$\\:/~\(\)]{5,}') ;;  # names with len>5
esac

selected=$(tmux capture-pane -pJS - |
    "${rex[@]}" |
    tac |  # show last entries first in fzf
    awk '{ if (!seen[$0]++) print }' |  # dedup
    fzf-tmux -- --no-sort --no-mouse --cycle --ansi --color=16 --tiebreak=end,begin,length --inline-info --tiebreak=length)

if [[ -n "$selected" ]]; then
    echo -n "$selected " | tmux load-buffer -
    tmux paste-buffer
fi

exit 0
