#!/usr/bin/env bash

# adjust brightness with:
# - xbacklight (arch)
# - light (nixos)

set -euo pipefail

action=$1

b_plus() { xbacklight -time 100 -inc "$1" || light -A "$1"; }
b_minus() { xbacklight -time 100 -dec "$1" || light -U "$1"; }
b_set() { xbacklight -time 100 -set "$1" || light -S "$1"; }
b_get() { xbacklight -get | cut -d . -f 1 || light -G | cut -d . -f 1; }

notify() { dunstify -t 1500 -r 123 -i "/usr/share/icons/Faba/48x48/notifications/$1" "$2"; }

case $action in
    +) STEP=2;;
    ++) STEP=10;;
    -) STEP=2;;
    --) STEP=10;;
esac

if [[ "$action" == +* ]]; then
    b_plus "$STEP"
    notify notification-display-brightness.svg "$(b_get)%"
elif [[ "$action" == -* ]]; then
    b_minus "$STEP"
    notify notification-keyboard-brightness.svg "$(b_get)%"
else
    b_set "$action"
    notify notification-display-brightness.svg "$(b_get)%"
fi

# limit to 1
if [[ "$(b_get)" -le 0 ]]; then
    b_set 1
fi
