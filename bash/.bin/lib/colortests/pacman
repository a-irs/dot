#!/usr/bin/env bash

f=3 b=4
for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done
rs=$'\e[0m'

cat << EOF

 $f3  ▄███████▄   $f1  ▄██████▄    $f2  ▄██████▄    $f4  ▄██████▄    $f5  ▄██████▄    $f6  ▄██████▄
 $f3▄█████████▀▀  $f1▄$rs█▀█$f1██$rs█▀█$f1██▄  $f2▄$rs█▀█$f2██$rs█▀█$f2██▄  $f4▄$rs█▀█$f4██$rs█▀█$f4██▄  $f5▄$rs█▀█$f5██$rs█▀█$f5██▄  $f6▄$rs█▀█$f6██$rs█▀█$f6██▄
 $f3███████▀      $f1█$rs▄▄█$f1██$rs▄▄█$f1███  $f2█$rs▄▄█$f2██$rs▄▄█$f2███  $f4█$rs▄▄█$f4██$rs▄▄█$f4███  $f5█$rs▄▄█$f5██$rs▄▄█$f5███  $f6█$rs▄▄█$f6██$rs▄▄█$f6███
 $f3███████▄      $f1████████████  $f2████████████  $f4████████████  $f5████████████  $f6████████████
 $f3▀█████████▄▄  $f1██▀██▀▀██▀██  $f2██▀██▀▀██▀██  $f4██▀██▀▀██▀██  $f5██▀██▀▀██▀██  $f6██▀██▀▀██▀██
 $f3  ▀███████▀   $f1▀   ▀  ▀   ▀  $f2▀   ▀  ▀   ▀  $f4▀   ▀  ▀   ▀  $f5▀   ▀  ▀   ▀  $f6▀   ▀  ▀   ▀

EOF
