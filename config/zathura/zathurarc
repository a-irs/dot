set font "Input normal 8"
set guioptions vhs
set statusbar-basename true
set statusbar-bg "#303e5b"
set statusbar-fg "#ffffff"
set inputbar-bg "#303e5b"
set inputbar-fg "#ffffff"
set page-padding 5
set smooth-scroll true
set window-title-page true
set selection-clipboard clipboard
set first-page-column 2
set default-bg "#303e5b"
set adjust-open width
#set scroll-page-aware true

map              b search backward
map [fullscreen] b search backward
map              f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
map              <C-w> quit
map [fullscreen] <C-w> quit
map              w adjust_window width
map [fullscreen] w adjust_window width
map              e adjust_window best-fit
map [fullscreen] e adjust_window best-fit
